<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_light"
    tools:context="com.example.kraken.zadanie_rekrutacyjne_android_developer.MainActivity">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewZadanie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zadanie Rekrutacyjne"
        android:textStyle="bold"
        android:textSize="26sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/textViewZadanie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp">
        <ListView
            android:id="@+id/lisViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:layout_alignParentTop="true">

    </ListView>
    </LinearLayout>

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/buttonStartID"
        android:background="@android:color/holo_green_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
    android:text="Stop"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
        android:id="@+id/buttonStopID"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_red_light"/>


</RelativeLayout>
